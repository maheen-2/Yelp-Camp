<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/stylesheets/usersStyle.css">

    <div class="container d-flex justify-content-center align-items-center mb-4">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1562206513-6a81cfc73936?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80"
                        alt="" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Register</h5>     
    <!--Register with email, username & password-->
    <form action="/register" method="POST" novalidate class="validated-form">
        <div class="mb-3">
            <label class="form-label" for="username">Username:</label>
            <input class="form-control" type="text" id="username" name="username" placeholder="username" autofocus required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="email">Email:</label>
            <input class="form-control" type="email" id="email" name="email" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="password">Password:</label>
            <input class="form-control" type="password" id="password" name="password" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>

        <button id="submit" class="btn btn-success">
            <span>Register</span><i></i>
            </button>
    
    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
